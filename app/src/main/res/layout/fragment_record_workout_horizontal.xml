    <LinearLayout
        android:orientation="vertical"
        android:background="@android:color/white"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dhiviyad.workoutapp.RecordWorkoutHorizontalFragment">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:layout_height="85dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:text="Workout Details"
                    android:layout_height="match_parent"
                    android:id="@+id/textView7"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:background="@android:color/white"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    style="@android:style/Widget.DeviceDefault.TextView"
                    android:textSize="18sp"
                    android:layout_marginTop="3dp"
                    android:textAllCaps="true" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="AVG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView33"
                        android:textAppearance="@style/TextAppearance.AppCompat.Button"
                        android:layout_weight="1"
                        android:padding="5dp" />

                    <TextView
                        android:text="03:41"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/avg_speed"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:layout_marginTop="2dp"
                        android:textColor="@android:color/black"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:textSize="24sp" />

                    <TextView
                        android:text="s/mi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView31"
                        android:textAlignment="viewEnd"
                        android:layout_weight="1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:background="@android:color/white"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="40dp">

                    <TextView
                        android:text="MAX"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView36"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp" />

                    <TextView
                        android:text="01:57"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/max_speed"
                        android:layout_weight="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:layout_marginRight="5dp"
                        android:padding="5dp" />

                    <TextView
                        android:text="s/mi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView34"
                        android:layout_weight="1"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:background="@android:color/white"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_height="40dp">

                    <TextView
                        android:text="MIN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView39"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:text="02:57"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/min_speed"
                        android:layout_weight="1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:layout_marginRight="5dp"
                        android:padding="5dp" />

                    <TextView
                        android:text="s/mil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView37"
                        android:layout_weight="1"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <HorizontalScrollView
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:id="@+id/scroll_view">
            <!--<LinearLayout-->
                <!--android:orientation="vertical"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:id="@+id/graph_area"-->
                <!--android:layout_width="800dp">-->
                <com.github.mikephil.charting.charts.CombinedChart
                    android:id="@+id/chart"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:minWidth="800dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:paddingRight="20dp" />
            <!--</LinearLayout>-->
        </HorizontalScrollView>
    </LinearLayout>
<!--</LinearLayout>-->
